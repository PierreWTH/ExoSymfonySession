<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <nav>
        {# DESKTOP NAVBAR - Si l'utilisateur est connecté #}
        {% if app.user %}

            {# Logo #}
            <div>
                <a href="{{ path('app_home') }}" class="nav-logo">SESSION </a>
            </div>

            {# Liens de navigation #}
            <div>
                <a href="{{ path('app_formation') }}">FORMATION</a>
                <a href="{{ path('app_session') }}">SESSION</a>
                <a href="{{ path('app_stagiaire') }}">STAGIAIRES</a>
                <a href="{{ path('app_formateur') }}">FORMATEURS</a>
                <a href="{{ path('app_modules') }}">MODULES</a>
            </div>

            {# Liens liés a l'utilisateur #}
            <div>
                <a href="{{ path('app_profil') }}" class="nav-item-background"><i class="fa-solid fa-user"></i> Mon profil</a>
                {# Si user est admin, affichage du bouton pour aller au panneau de controle #}
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_pannel') }}" class="nav-item-background"><i class="fa-solid fa-hammer"></i> Administration</a>
                {% endif %}
                <a href="{{ path('app_logout') }}" class="nav-item-background"><i class="fa-solid fa-right-from-bracket"></i> Se deconnecter</a>
            </div>

        {# DESKTOP NAVBAR - Si l'utilisateur n'est pas connecté #}
        {% else %}
        
            <div class="not-connected-navbar">
                {# Logo #}
                <div>
                    <a href="{{ path('app_home') }}" class="nav-logo">SESSION </a>
                </div>

                {# Liens login / register #}
                <div>
                    <a href="{{ path('app_login') }}" class="nav-item-background"><i class="fa-solid fa-right-to-bracket"></i> Se connecter</a>
                    <a href="{{ path('app_register') }}" class="nav-item-background"> <i class="fa-regular fa-address-card"></i> S'inscrire</a>
                </div>
            </div>

        {% endif %}

    </nav>
    
    {# Menu burger #}
    <div id="mySidenav" class="sidenav">
        <a id="closeBtn" href="#" class="close">×</a>
        {# Si l'utilisateur est connecté #}
        {% if app.user %}
        
        <ul>
            {# Liens de navigation #}
            <li><a href="{{ path('app_formation') }}">FORMATION</a></li>
            <li><a href="{{ path('app_session') }}">SESSION</a></li>
            <li><a href="{{ path('app_stagiaire') }}">STAGIAIRES</a></li>
            <li><a href="{{ path('app_formateur') }}">FORMATEURS</a></li>
            <li><a href="{{ path('app_modules') }}">MODULES</a></li>

            {# Liens liés a l'utilisateur#}
            <li><a href="{{ path('app_profil') }}"><i class="fa-solid fa-user "></i> Mon profil</a></li>
            {#Si user est admin, affichage du bouton d'administration #}
            {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('admin_pannel') }}"><i class="fa-solid fa-hammer "></i> Administration</a></li>
            {% endif %}

            <li><a href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket "></i> Se deconnecter</a></li>
        </ul>

        {# Si l'utilisateur n'est pas connecté #}
        {% else %}
        <ul>
            {# Liens de login / register#}
            <li><a href="{{ path('app_login') }}"><i class="fa-solid fa-right-to-bracket "></i> Se connecter</a></li>
            <li><a href="{{ path('app_register') }}"> <i class="fa-regular fa-address-card"></i> S'inscrire</a></li>
        </ul>
        {% endif %}
    </div>
    {# Icone, arrière plan et logo SESSION du menu burger #}
    <div class="burger-background">
        <a href="#" id="openBtn">
            <span class="burger-icon">
            <span></span>
            <span></span>
            <span></span>
            </span>
        </a>

        <a href="{{ path('app_home') }}" class="burger-logo">SESSION</a>
    </div>

    <body>
        {% block body %}{% endblock %}
    </body>

    <script src="{{ asset('js/function.js')}}"></script>
    
</html>
