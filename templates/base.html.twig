<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <nav>
        <div>
        {% if app.user %}
        <a href="{{ path('app_home') }}" class="nav-logo">SESSION </a>
        </div>

        <div>
        <a href="{{ path('app_formation') }}">FORMATION</a>
        <a href="{{ path('app_session') }}">SESSION</a>
        <a href="{{ path('app_stagiaire') }}">STAGIAIRES</a>
        <a href="{{ path('app_formateur') }}">FORMATEURS</a>
        <a href="{{ path('app_categorie') }}">CATEGORIE</a>
        </div>
        <div>
        
        <a href="{{ path('app_profil') }}"class="nav-item-background"><i class="fa-solid fa-user"></i> Mon profil</a>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin_pannel') }}"class="nav-item-background"><i class="fa-solid fa-hammer"></i> Administration</a>
        {% endif %}
        <a href="{{ path('app_logout') }}" class="nav-item-background"><i class="fa-solid fa-right-from-bracket"></i> Se deconnecter</a>
        {% else %}

        <a href="{{ path('app_login') }}"class="nav-item-background"><i class="fa-solid fa-right-to-bracket"></i> Se connecter</a>
        <a href="{{ path('app_register') }}"class="nav-item-background"> <i class="fa-regular fa-address-card"></i> S'inscrire</a>
        </div>
        {% endif %}

    </nav>
    {% if app.user %}
        <div id="mySidenav" class="sidenav">
            <a id="closeBtn" href="#" class="close">×</a>
            <ul>
            <li><a href="{{ path('app_formation') }}">FORMATION</a></li>
            <li><a href="{{ path('app_session') }}">SESSION</a></li>
            <li><a href="{{ path('app_stagiaire') }}">STAGIAIRES</a></li>
            <li><a href="{{ path('app_formateur') }}">FORMATEURS</a></li>
            <li><a href="{{ path('app_categorie') }}">CATEGORIE</a></li>
            <li><a href="{{ path('app_profil') }}"><i class="fa-solid fa-user "></i> Mon profil</a></li>
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('admin_pannel') }}">Administration</a></li>
        {% endif %}
            <li><a href="{{ path('app_logout') }}"> Se deconnecter</a></li>
        {% else %}

            <li><a href="{{ path('app_login') }}"><i class="fa-solid fa-right-to-bracket "></i> Se connecter</a></li>
            <li><a href="{{ path('app_register') }}"> <i class="fa-regular fa-address-card"></i> S'inscrire</a></li>
            {% endif %}
            </ul>
        </div>
        </div>
        <div class="burger-background">
        <a href="#" id="openBtn">
            <span class="burger-icon">
            <span></span>
            <span></span>
            <span></span>
            </span>
        </a>
        <a href=""{{ path('app_home') }}"" class="burger-logo">SESSION</a>
        </div>
    <body>
        {% block body %}{% endblock %}
    </body>
    <script src="{{ asset('js/function.js')}}"></script>
</html>
