{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}

{% if not app.user %}

<p class="titre-page"> Connectez vous pour acc√©der au contenu. </p>

{% else %}

 <div class="titre-page">
<h1> Liste des formations </h1>
{% if is_granted('ROLE_ADMIN') %}
<a href="{{path ('add_formation')}}"><i class="fa-regular fa-square-plus"></i> Ajouter une formation</a> 
{% endif %}
</div>

<div class="table-container">
<table>
    <thead>
        <tr>
            <th>Nom</th>
            {% if is_granted('ROLE_ADMIN') %}
            <th>Action</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for formation in formations %}
        <tr>
            <td>{{formation.nomFormation}}</td>
            {% if is_granted('ROLE_ADMIN') %}
            <td><a href="{{path ('edit_formation', {id : formation.id })}}"><i class="fa-solid fa-pen-to-square"></i></a> <a href="{{path ('delete_formation', {id : formation.id })}}"><i class="fa-solid fa-trash"></i></a></td>
            {% endif %}
        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endif %}
{% endblock %}
