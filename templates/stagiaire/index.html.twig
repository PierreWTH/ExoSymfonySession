{% extends 'base.html.twig' %}

{% block title %} Liste des stagiaires {% endblock %}

{% block body %}

<h1> Liste des stagiaires </h1>

<a href="{{path ('add_stagiaire')}}">Ajouter un stagiaire</a> 

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Gerer</th>
            
            
        </tr>
    </thead>
    <tbody>
        {% for stagiaire in stagiaires %}
        <tr>
            <td><a href="{{path ('detail_stagiaire', {id : stagiaire.id })}}">{{stagiaire.prenom}}</a></td>
            <td>{{stagiaire.nom}}</td>
            <td><a href="{{path ('edit_stagiaire', {id : stagiaire.id })}}">Editer</a> <a href="{{path ('delete_stagiaire', {id : stagiaire.id })}}">Supprimer</a></td>
        

        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
