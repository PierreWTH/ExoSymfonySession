{% extends 'base.html.twig' %}

{% block title %} Liste des stagiaires {% endblock %}

{% block body %}

<h1> Liste des stagiaires </h1>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
        </tr>
    </thead>
    <tbody>
        {% for stagiaire in stagiaires %}
        <tr>
            <td><a href="{{path ('detail_stagiaire', {id : stagiaire.id })}}">{{stagiaire.prenom}}</a></td>
            <td>{{stagiaire.nom}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
